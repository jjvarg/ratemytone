<%- include('partials/logged-in-header') -%>
<header class="bg-base-300 shadow">
    <div class="mx-auto max-w-7xl py-6 px-4 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold tracking-tight text-900 text-center">Favorite tones</h1>
    </div>
</header>
<div class="flex flex-grow mx-auto h-auto">
    <div class="mx-auto max-w-7xl py-10">
        <div class="grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-3 xl:gap-x-8">
            <% for(let i=0; i<posts.length; i++) {%>
                <%if(posts[i].bookmarks.includes(user.id)) {%>
                    <div class="card card-compact w-80 bg-base-300 shadow-xl">
                        <a href="/post/<%= posts[i]._id%>" class="hover:opacity-75">
                            <img class="hover:opacity-75" src="<%= posts[i].image%>" alt="...">
                        </a>
                        <div class="card-actions justify-end pt-2 pr-2">
                            <div class="badge badge-secondary"><i class="px-1 fa fa-heart"></i><%= posts[i].likes.length - 1 %></div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title"><%= posts[i].title%></h5>
                            <p><small>Submitted by: <%= userName[i]%></small></p>
                            <p><%= posts[i].caption%></p>
                        </div>
                        <div class="card-actions justify-end px-2">
                            <div class="badge badge-primary"><%= posts[i].toneType%></div>
                            <div class="badge badge-secondary"><%= posts[i].ampType%></div>
                        </div>
                        <div class="form-control p-2">
                            <a href="/post/<%= posts[i]._id%>" class="btn btn-primary normal-case">Listen</a>
                        </div>
                    </div>
                <% } %>
            <% } %>
        </div>
    </div>
</div>
<%- include('partials/footer') -%>
